{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@constraints": ["src/validation/constraints"],
      "@database/*": ["src/entities/database/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@guards/*": ["src/guards/*"],
      "@transform": ["src/validation/transform"],
      "@utility/*": ["src/entities/utility/*"],
    }
  }
}
